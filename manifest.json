{
  "manifest_version": 2,

  "name": "No Stupid Fonts",
  "description": "This extension replaces hard to read fonts with helvetica.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "*://*/*"
  ],

  "background": {
     "scripts": ["helvetique.js"],
     "persistent": false 
  },
  
  "content_scripts": [{
     "matches": ["*://*/*"],
     "js": ["contentscript.js"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
